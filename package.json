{
  "name": "react-controlled-input",
  "version": "0.1.0",
  "description": "A low-level input component that allows control over internal properties such as selection",
  "main": "lib/index.js",
  "repository": "https://github.com/jchitel/react-controlled-input.git",
  "author": "Jake Chitel <jchitel@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "parcel serve ./example/index.html"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/jest": "^23.3.1",
    "@types/react-dom": "^16.0.7",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16.3": "^1.2.0",
    "jest": "^23.5.0",
    "parcel-bundler": "^1.9.7",
    "react-dom": "^16.4.2",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "react": ">=16"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "setupTestFrameworkScriptFile": "./jest-setup.js",
    "resetMocks": true
  }
}
